{% extends 'base.html.twig' %}

{% block title %}Espace Administration{% endblock %}

{% block body %}
    <div class="container-fluid row justify-content-center" style="height: calc(100vh - 50px);">
        <div class="col-md-6 my-5">
            <h1 class="text-center">Espace Administration</h1>
            <form action="" method="POST">
                <div class="form-group my-4">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" required id="username" class="form-control" placeholder="username" name="_username">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" required id="password" class="form-control" placeholder="password" name="_password">
                </div>

                {% if error %}
                    <div class="alert alert-danger text-center">
                        <p>Erreur lors de l'authentification</p>
                    </div>
                {% endif %}
                
                <div class="text-center">
                    <button type="submit" class="btn btn-primary my-4">
                        <i class="fas fa-user-lock"></i> 
                        Se connecter
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
