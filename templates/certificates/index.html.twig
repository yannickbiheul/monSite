{% extends 'base.html.twig' %}

{% block title %}Diplômes / Certificats{% endblock %}

{% block body %}

    {# DIPLOMES #}
    <div class="container">
        <h1 class="my-5 text-center">Diplômes</h1>
        <div class="row">
            {% for diplome in diplomes %}
                <div class="col-md-4 mt-4 mb-4 d-flex justify-content-center">
                    <div class="card" style="width: 18rem; height: 14rem;">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <h5 class="card-title">{{ diplome.titre }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ diplome.dateObtention | date("d/m/Y") }}</h6>
                            <p class="card-text">{{ diplome.etablissement }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    {# CERTIFICATS #}
    <div class="container">
        <h1 class="my-5 text-center">Certificats</h1>
        <div class="row">
            {% for certificat in certificats %}
                <div class="col-md-4 mt-4 mb-4 d-flex justify-content-center">
                    <div class="card" style="width: 18rem; height: 14rem;">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <h5 class="card-title">{{ certificat.titre }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ certificat.dateObtention | date("d/m/Y") }}</h6>
                            <p class="card-text">{{ certificat.etablissement }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}  
        </div>
    </div>

{% endblock %}
